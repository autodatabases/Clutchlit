@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" style="float:left; width:100%" >
        <ul class="nav navbar-nav navbar-left" style="width:100%;">
            <li class="pull-left">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-default btn-flat" style="padding:6px 12px !important">@UserManager.GetUserName(User)!</a>
            </li>
            <li class="pull-right">
                <button type="submit" class="btn btn-default btn-flat">Wyloguj</button>
</li>
          
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Zarejestruj</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Zaloguj</a></li>
    </ul>
}