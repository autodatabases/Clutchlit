@{
    ViewData["Title"] = "Edytuj produkt | Produkty | Dział Prestashop";
    ViewData["Title_1"] = "Produkty";
    ViewData["Title_2"] = "Edytuj produkt";
}

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Edytuj dane produktu</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Zwiń">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Zamknij">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>

    <div class="box-body">

        <div class="form-group">
            <form method="post" asp-action="update" asp-controller="PrestashopProducts" >
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="text" name="inputId" hidden value="@ViewData["product_id"]" />
                        <label for="inputTitle">Nazwa produktu</label>
                        <input type="text" name="inputTitle" class="form-control" id="inputTitle" value="@ViewData["product_title"]">
                    </div>
                    <div class="form-group">
                        <label for="inputGrossPrice">Cena brutto produktu</label>
                        <input type="text" name="inputGrossPrice" class="form-control" id="inputGrossPrice" value="@ViewData["product_gross_price"]">
                    </div>
                    <div class="form-group">
                        <label for="inputQuantity">Dostępna ilość</label>
                        <select name="inputQuantity" id="inputQuantity" class="form-control">
                            <option value="0">0</option>
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="15">15</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="inputStatus">Widoczność produktu</label>
                        <select name="inputStatus" id="inputStatus" class="form-control">
                            <option value="1">TAK</option>
                            <option value="0">NIE</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h2>@ViewData["product_title"]</h2>
                </div>
                <div class="col-lg-12">
                    <input type="submit" value="Zapisz dane" class="btn btn-tumblr" />
                    <a class="btn btn-link" asp-controller="PrestashopProducts" asp-action="">Wróć</a>
                </div>
            </form>
        </div>

    </div>

</div>
