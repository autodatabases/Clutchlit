@{
    ViewData["Title"] = "Edytuj produkt | Produkty | Dział Prestashop";
    ViewData["Title_1"] = "Produkty";
    ViewData["Title_2"] = "Edytuj produkt";
}

<div class="box">
    

    <div class="box-body">
        <h2>Pomyślnie zaktualizowałem dane produktu!</h2>
        <table class="table-bordered table">
            <thead>
                <tr>
                    <td>Id produktu</td>
                    <td>Nowa cena</td>
                    <td>Nowy stan</td>
                    <td>Nowy status</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@ViewData["product_id"]</td>
                    <td>@ViewData["price"] PLN</td>
                    <td>@ViewData["status"]</td>
                    <td>@ViewData["quantity"]</td>
                </tr>
            </tbody>
        </table>
        
    </div>

</div>
